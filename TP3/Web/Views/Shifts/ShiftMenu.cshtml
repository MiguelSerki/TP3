@model List<Services.DTO.EmployeeDTO>
@{
    ViewBag.Title = "ShiftView";
}

<h2>ShiftView</h2>

<div>
    <tag>Lista de empleados</tag>
    <table class="form-group" >
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Pais</th>
            <th>Fecha de contratacion</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.EmployeeID</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Country</td>
            <td>@item.HireDate</td>
            <td></td>
        </tr>
        //Cuando Agustin termine la web de empleados fijate si anda miguel del futuro
        }
    </table>
</div>